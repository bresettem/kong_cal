<div class="login-page">
  <div class="container d-flex align-items-center position-relative py-5">
    <div class="card shadow-sm w-100 rounded overflow-hidden bg-none">
      <div class="card-body p-0">
        <div class="row gx-0 align-items-stretch">
          <!-- Logo & Information Panel-->
          <%= render 'devise/shared/info_panel' %>

          <!-- Form Panel    -->
          <div class="col-lg-6 bg-white">
            <div class="d-flex align-items-center px-4 px-lg-5 h-100 bg-dash-dark-2">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <h2>Log in</h2>
                <%= render 'layouts/notices' %>
                <div class="form-floating">
                  <%= f.email_field :email, autofocus: true, id: 'floatingEmail', class: 'form-control', placeholder: 'name@example.com', autocomplete: 'email' %>
                  <%= f.label :email, for: 'floatingEmail', class: 'label-material' %><br/>
                </div>

                <div class="form-floating">
                  <%= f.password_field :password, autocomplete: "current-password", id: 'password', class: 'form-control', placeholder: 'Password' %>
                  <%= f.label :password, for: 'password' %><br/>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-check mb-3">
                    <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
                    <%= f.label :remember_me, class: 'form-check-label', for: 'remember_me' %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "Log in", class: 'btn btn-primary mb-3', data: { turbo: false } %>
                </div>
                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'devise/shared/footer' %>
</div>