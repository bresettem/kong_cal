<div class="login-page">
  <div class="container d-flex align-items-center position-relative py-5">
    <div class="card shadow-sm w-100 rounded overflow-hidden bg-none">
      <div class="card-body p-0">
        <div class="row gx-0 align-items-stretch">
          <!-- Logo & Information Panel-->
          <%= render 'devise/shared/info_panel' %>
          <!-- Form Panel    -->
          <div class="col-lg-6 bg-white">
            <div class="d-flex align-items-center px-4 px-lg-5 h-100 bg-dash-dark-2">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <h2>Edit <%= resource_name.to_s.humanize %></h2>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-floating">
                  <%= f.email_field :email, autofocus: true, id: 'floatingEmail', class: 'form-control', placeholder: 'name@example.com', autocomplete: 'email' %>
                  <%= f.label :email, for: 'floatingEmail', class: 'label-material' %><br/>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                
                <div class="form-floating">
                  <%= f.password_field :password, autocomplete: "new-password", id: 'password', class: 'form-control', placeholder: 'Password' %>
                  <%= f.label :password, for: 'password' %> <i>(leave blank if you don't want to change it)</i><br/>
                  <% if @minimum_password_length %>
                    <br/>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                </div>

                <div class="form-floating">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", id: 'password_confirmation', class: 'form-control', placeholder: 'Password Confirmation' %>
                  <%= f.label :password_confirmation, for: 'password_confirmation' %><br/>
                </div>

                <div class="form-floating">
                  <%= f.password_field :current_password, autocomplete: "current-password", id: 'current_password', class: 'form-control', placeholder: 'Password Confirmation' %>
                  <%= f.label :current_password, for: 'current_password' %>
                  <i>(we need your current password to confirm your changes)</i><br/>
                </div>

                <div class="actions">
                  <%= f.submit "Update", class: 'btn btn-primary', data: { turbo: false } %>
                </div>
                <%= link_to "Back", :back, class: 'btn btn-primary', data: { turbo: false } %>

                <h3 class="mt-3">Cancel my account</h3>

                <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: { turbo: false, confirm: "Are you sure?" }, method: :delete %></p>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'devise/shared/footer' %>
</div>