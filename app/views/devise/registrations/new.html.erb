<div class="login-page">
  <div class="container d-flex align-items-center position-relative py-5">
    <div class="card shadow-sm w-100 rounded overflow-hidden bg-none">
      <div class="card-body p-0">
        <div class="row gx-0 align-items-stretch">
          <!-- Logo & Information Panel-->
          <div class="col-lg-6">
            <div class="info d-flex justify-content-center flex-column p-4 h-100">
              <div class="py-5">
                <h1 class="display-6 fw-bold">Dashboard</h1>
                <p class="fw-light mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
              </div>
            </div>
          </div>
          <!-- Form Panel    -->
          <div class="col-lg-6 bg-white">
            <div class="d-flex align-items-center px-4 px-lg-5 h-100 bg-dash-dark-2">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <h2>Sign up</h2>

                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-floating">
                  <%= f.email_field :email, autofocus: true, id: 'floatingEmail', class: 'form-control', placeholder: 'name@example.com', autocomplete: 'email' %>
                  <%= f.label :email, for: 'floatingEmail', class: 'label-material' %><br/>
                </div>

                <div class="form-floating">
                  <%= f.password_field :password, autocomplete: "new-password", id: 'password', class: 'form-control', placeholder: 'Password' %>
                  <%= f.label :password, for: 'password' %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br/>
                </div>

                <div class="actions mt-2">
                  <%= f.submit "Register", class: 'btn btn-primary mb-3', data: { turbo: false } %>
                </div>
                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'devise/shared/footer' %>
</div>