<% if goal.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

    <ul>
      <% goal.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-floating mb-3">
  <%= form.number_field :unclaimed_coins, class: 'form-control', id: 'unclaimed_coins', placeholder: 0, step: :any %>
  <%= form.label :unclaimed_coins, for: 'unclaimed_coins' %>
</div>

<div class="form-floating mb-3">
  <%= form.number_field :goal, class: 'form-control', id: 'goal', placeholder: 0, step: :any %>
  <%= form.label :goal, for: 'goal' %>
</div>

<div class="form-floating mb-3">
  <%= form.date_field :started_on, class: 'form-control', id: 'started_on', placeholder: 'MM/DD/YYYY', value: @last_claimed %>
  <%= form.label :started_on, for: 'started_on' %>
</div>

<div class="form-floating mb-3">
  <%= form.number_field :num_days_to_collect, class: 'form-control', id: 'num_days_to_collect' %>
  <%= form.label :num_days_to_collect, for: 'num_days_to_collect' %>
</div>

<div class="form-floating mb-3">
  <%= form.date_field :first_day_to_collect, class: 'form-control', id: 'first_day_to_collect', placeholder: 'MM/DD/YYYY' %>
  <%= form.label :first_day_to_collect, for: 'first_day_to_collect' %>
</div>

<div>
  <%= form.submit class: 'btn btn-success' %>
</div>