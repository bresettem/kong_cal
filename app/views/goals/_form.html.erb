<%= form_with(model: goal) do |form| %>
  <% if goal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
        <% goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.number_field :unclaimed_coins, class: 'form-control', id: 'unclaimed_coins', placeholder: 0, step: :any %>
    <%= form.label :unclaimed_coins, for: 'unclaimed_coins' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.number_field :goal, class: 'form-control', id: 'goal', placeholder: 0, step: :any %>
    <%= form.label :goal, for: 'goal' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.date_field :started_on, class: 'form-control', id: 'started_on', placeholder: Time.now %>
    <%= form.label :started_on, for: 'started_on' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>